        <TextBox x:Name="capacitanceTextbox" HorizontalAlignment="Left" Margin="115,278,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219"/>
        <TextBox x:Name="inductanceTextbox" HorizontalAlignment="Left" Margin="115,396,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219"/>
        <TextBlock x:Name="capacitanceLabel" HorizontalAlignment="Left" Margin="115,254,0,0" TextWrapping="Wrap" Text="Capacitance" VerticalAlignment="Top" Width="107" FontSize="18"/>
        <TextBlock x:Name="inductanceLabel" HorizontalAlignment="Left" Margin="115,373,0,0" TextWrapping="Wrap" Text="Inductance" VerticalAlignment="Top" Width="107" FontSize="18"/>

    </Grid>
</Page>

